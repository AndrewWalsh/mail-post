    "react-dom": "^16.6.0",
    "react-hot-loader": "^4.3.12",
    "react-redux": "^5.1.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^4.0.1",
    "redux-form": "^7.4.2",
    "redux-form-material-ui": "^5.0.0-beta.3",
