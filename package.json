    "minimist": "^1.2.0",
    "mock-fs": "^4.7.0",
    "node-sass": "^4.9.4",
    "npm-logical-tree": "^1.2.1",
    "npm-run-all": "^4.1.3",
    "react-mock-router": "^1.0.15",
    "react-test-renderer": "^16.6.0",
    "redux-logger": "^3.0.6",
