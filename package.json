  },
  "devEngines": {
    "node": ">=8.x",
    "npm": ">=4.x",
    "yarn": ">=0.21.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test-all"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "electron": "<rootDir>/test/mocks/electronMock.js"
    }
  }
}
